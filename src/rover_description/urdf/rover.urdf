<?xml version="1.0"?>
<robot name="rover">

  <!-- Material Definitions -->
  <material name="chassis_blue">
    <color rgba="0.2 0.4 0.8 1.0"/>
  </material>
  
  <material name="wheel_black">
    <color rgba="0.1 0.1 0.1 1.0"/>
  </material>
  
  <material name="wheel_gray">
    <color rgba="0.4 0.4 0.4 1.0"/>
  </material>

  <!-- Base Chassis -->
  <link name="base_link">
    <visual>
      <geometry><box size="0.6 0.4 0.12"/></geometry>
      <origin xyz="0 0 0.06" rpy="0 0 0"/>
      <material name="chassis_blue"/>
    </visual>
    <collision>
      <geometry><box size="0.6 0.4 0.12"/></geometry>
      <origin xyz="0 0 0.06" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="5.0"/>
      <inertia ixx="0.084" iyy="0.19" izz="0.23"
               ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  <!-- Front Left Wheel -->
  <link name="wheel_fl">
    <visual>
      <geometry><cylinder radius="0.1" length="0.05"/></geometry>
      <origin xyz="0 0 0" rpy="0 1.570796 0"/>
      <material name="wheel_black"/>
    </visual>
    <collision>
      <geometry><cylinder radius="0.1" length="0.05"/></geometry>
      <origin xyz="0 0 0" rpy="0 1.570796 0"/>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <inertia ixx="0.00054" iyy="0.00054" izz="0.00025"
               ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>
  <joint name="wheel_fl_joint" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_fl"/>
    <origin xyz="0.25 0.2 0.1" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- Front Right Wheel -->
  <link name="wheel_fr">
    <visual>
      <geometry><cylinder radius="0.1" length="0.05"/></geometry>
      <origin xyz="0 0 0" rpy="0 1.570796 0"/>
      <material name="wheel_black"/>
    </visual>
    <collision>
      <geometry><cylinder radius="0.1" length="0.05"/></geometry>
      <origin xyz="0 0 0" rpy="0 1.570796 0"/>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <inertia ixx="0.00054" iyy="0.00054" izz="0.00025"
               ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>
  <joint name="wheel_fr_joint" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_fr"/>
    <origin xyz="0.25 -0.2 0.1" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- Rear Left Wheel -->
  <link name="wheel_rl">
    <visual>
      <geometry><cylinder radius="0.1" length="0.05"/></geometry>
      <origin xyz="0 0 0" rpy="0 1.570796 0"/>
      <material name="wheel_gray"/>
    </visual>
    <collision>
      <geometry><cylinder radius="0.1" length="0.05"/></geometry>
      <origin xyz="0 0 0" rpy="0 1.570796 0"/>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <inertia ixx="0.00054" iyy="0.00054" izz="0.00025"
               ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>
  <joint name="wheel_rl_joint" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_rl"/>
    <origin xyz="-0.25 0.2 0.1" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- Rear Right Wheel -->
  <link name="wheel_rr">
    <visual>
      <geometry><cylinder radius="0.1" length="0.05"/></geometry>
      <origin xyz="0 0 0" rpy="0 1.570796 0"/>
      <material name="wheel_gray"/>
    </visual>
    <collision>
      <geometry><cylinder radius="0.1" length="0.05"/></geometry>
      <origin xyz="0 0 0" rpy="0 1.570796 0"/>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <inertia ixx="0.00054" iyy="0.00054" izz="0.00025"
               ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>
  <joint name="wheel_rr_joint" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_rr"/>
    <origin xyz="-0.25 -0.2 0.1" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

</robot>
